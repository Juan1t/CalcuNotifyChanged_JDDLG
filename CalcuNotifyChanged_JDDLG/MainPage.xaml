<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalcuNotifyChanged_JDDLG.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Entry Placeholder="Numero 1" Text="{Binding Num1}"/>
            <Entry Placeholder="Numero 2" Text="{Binding Num2}"/>
            <Entry Placeholder="Resultado" Text="{Binding Result}"/>

            <Button Command="{Binding SumaCommand}"
                    HorizontalOptions="Center"
                    Text="sumar"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
